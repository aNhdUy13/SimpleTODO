<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <ImageView
        android:id="@+id/img_closeDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="310dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_close"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/purple_700"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_titleDialogNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_titleFinishStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( Finished ? )"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center|top">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:weightSum="2">
                        <TextView
                            android:id="@+id/txt_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textColor="@color/purple_700"
                            android:textSize="15dp"
                            android:textStyle="bold"/>
                        <EditText
                            android:id="@+id/edt_noteTitle_2"
                            android:layout_width="match_parent"
                            android:background="@drawable/shape_add"
                            android:padding="5dp"
                            android:hint="Laptop"
                            android:textColor="@color/black_text"
                            android:textSize="12dp"
                            android:layout_height="40dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/purple_700"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/edt_noteDes_2"
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_add"
                        android:padding="5dp"
                        android:hint="100.000"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_height="40dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/txt_category_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:inputType="phone"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:background="@drawable/shape_add"
                            android:text="category ..."

                            android:padding="15dp"
                            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                            />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Date"
                            android:gravity="center|left"
                            android:textColor="@color/purple_700"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@drawable/shape_add"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/img_selectTime_2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_clock"/>

                        <TextView
                            android:id="@+id/txt_noteDate_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="dd/MM/yyyy"
                            android:textSize="12dp"
                            android:textColor="@color/black_text"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_action_2"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="5dp"
                        android:backgroundTint="@color/purple_700">
                        <TextView
                            android:id="@+id/txt_title_action"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Update"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="17dp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_delete_2"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        app:cardCornerRadius="5dp"
                        android:backgroundTint="#E91E63">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Delete"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="17dp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_cancel"
                        android:layout_width="100dp"
                        android:visibility="gone"
                        android:layout_height="40dp"
                        app:cardCornerRadius="5dp"
                        android:backgroundTint="@color/purple_700">
                        <TextView
                            android:id="@+id/txt_title_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Cancel"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="17dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:visibility="gone"

        android:layout_marginTop="15dp"
        android:layout_below="@+id/cv_first"
        android:layout_width="350dp"
        android:layout_height="wrap_content">

    </androidx.cardview.widget.CardView>
</RelativeLayout>